<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dreamheaven.message.domain.Message" table="T_message" schema="bmp">
        <id name="mid" type="java.lang.String">
            <column name="NMID" length="20" />
            <generator class="native" />
        </id>
        <property name="uid" type="java.lang.String">
            <column name="nuid" />
        </property>
        <property name="mcontent" type="java.lang.String">
            <column name="smcontent" />
        </property>
        <property name="createTime" type="java.lang.String">
            <column name="screateTime" />
        </property>
        
    </class>
</hibernate-mapping>
