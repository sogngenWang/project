<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.dream.weddingexpo.bean.Message" table="message"
		schema="MerrySystem">
		<id name="messageId" type="java.lang.String">
			<column name="messageId" length="20" />
			<generator class="native" />
		</id>
		<property name="storeId" type="java.lang.String">
			<column name="storeId" length="20" />
		</property>
		<property name="messageContentPath" type="java.lang.String">
			<column name="messageContentPath" />
		</property>
		<property name="messageTitle" type="java.lang.String">
			<column name="messageTitle" />
		</property>
	</class>
</hibernate-mapping>
